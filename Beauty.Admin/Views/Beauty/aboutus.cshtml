<script src="~/js/jquery-3.7.0.min.js" asp-append-version="true"></script>
<script src="~/js/aboutus.js" asp-append-version="true"></script>

<div class="card" style="width: 58rem;margin-left:70px">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h3><i class="fa fa-info-circle" style="font-size:28px;color:black"></i> <span class="font-family">Aboutus</span></h3>
            </div>
            <div class="col-md-6 text-end mt-1">
                <a href="#" class="btn btn-primary text-end font-family" onclick="Clear()" data-toggle="modal" data-target="#rightSideModal">Add</a>
            </div>
        </div>
        <table class="table table-bordered table-hover mt-3">
            <thead>
                <tr style="background-color:lightgray;text-align:center">
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">SubTitle</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody id="aboutlist" style="text-align:center">
               
            </tbody>
        </table>
    </div>
</div>
<div class="modal fade" id="rightSideModal" tabindex="-1" role="dialog" aria-labelledby="rightSideModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-right" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="rightSideModalLabel">Manage Aboutus</h5>
                <button type="button"  class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            <form id="aboutusForm" onsubmit="return submitAbout()">
                <div class="row">
                    <div class="col-md-4">
                        <span for="Title">Title</span><span class="text-danger">*</span>
                            <input type="text" id="Title" name="Title" class="form-control" required title="" autocomplete="off"/>
                    </div>
                        <div class="col-md-4">
                            <span for="SubTitle">SubTitle</span><span class="text-danger">*</span>
                            <input type="text" id="SubTitle" name="SubTitle" class="form-control" required title="" autocomplete="off" />
                        </div>
                        <div class="col-md-4">
                            <span for="Image">Image</span><span class="text-danger">*</span>
                            <input type="text" id="Image" name="Image" class="form-control" required title="" autocomplete="off" />
                        </div>
                        <textarea id="Description" name="Description" style="resize:none;width: 96%;margin-left: 16px;margin-top: 15px;border:1px solid #ced4da" required title=""></textarea>
                </div>
                    <div class="modal-footer">
                        <input type="hidden" id="ID" name="ID" />
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" id="btnsumbit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>