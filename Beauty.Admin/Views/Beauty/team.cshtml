<script src="~/beauty.js/team.js" asp-append-version="true"></script>
<div class="card" style="width: 58rem;margin-left:70px">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h3><i class="fa fa-group" style="font-size:28px;color:black"></i> <span class="font-family">Team</span></h3>
            </div>
            <div class="col-md-6 text-end mt-1">
                <a href="#" class="btn btn-primary text-end font-family" onclick="ClearForm()" data-toggle="modal" data-target="#rightSideModal">Add</a>
            </div>
        </div>
        <table class="table table-bordered table-hover mt-3 DataTable">
            <thead>
                <tr style="background-color:lightgray;text-align:center">
                    <th scope="col" width="10">#</th>
                   @*  <th scope="col">Title</th>
                    <th scope="col">FirstName</th>
                    <th scope="col">LastName</th> *@
                    <th scope="col" width="10">Name</th>
                    <th scope="col" width="10">Description</th>
@*                     <th scope="col" width="10">TwitterUrl</th>
                    <th scope="col" width="10">InstagramUrl</th> *@
                    <th scope="col" width="10">Image</th>
                    <th scope="col" width="10">Action</th>
                </tr>
            </thead>
            <tbody id="list" style="text-align:center">
            </tbody>
        </table>
    </div>
</div>
<div class="modal fade" id="rightSideModal" tabindex="-1" role="dialog" aria-labelledby="rightSideModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-right" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="rightSideModalLabel">Manage Team</h5>
                <button type="button"  class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="teamForm" onsubmit="return submitAbout()" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-3">
                        <span for="Title">Title</span><span class="text-danger">*</span>
                            <input type="text" id="Title" name="Title" class="form-control" required title="" autocomplete="off"/>
                    </div>
                        <div class="col-md-3">
                            <span for="FirstName">FirstName</span><span class="text-danger">*</span>
                            <input type="text" id="FirstName" name="FirstName" class="form-control" required title="" autocomplete="off" />
                        </div>
                        <div class="col-md-3">
                            <span for="MiddleName">MiddleName</span><span class="text-danger"></span>
                            <input type="text" id="MiddleName" name="MiddleName" class="form-control" autocomplete="off" />
                        </div>
                        <div class="col-md-3">
                            <span for="LastName">LastName</span><span class="text-danger">*</span>
                            <input type="text" id="LastName" name="LastName" class="form-control" required title="" autocomplete="off" />
                        </div>  
                        <div class="col-md-4">
                            <span for="TwitterUrl">TwitterUrl</span><span class="text-danger">*</span>
                            <input type="text" id="TwitterUrl" name="TwitterUrl" class="form-control" required title="" autocomplete="off" />
                        </div>
                        <div class="col-md-4">
                            <span for="InstagramUrl">InstagramUrl</span><span class="text-danger">*</span>
                            <input type="text" id="InstagramUrl" name="InstagramUrl" class="form-control" required title="" autocomplete="off" />
                        </div>
                        <div class="col-md-4">
                            <span for="Image">Image</span><span class="text-danger">*</span>
                            <input type="file" id="Image" name="Image" class="form-control" accept="image/*" required title="" autocomplete="off" />
                        </div>
                        <textarea id="Description" name="Description" style="resize:none;width: 96%;margin-left: 16px;margin-top: 15px;border:1px solid #ced4da" required title=""></textarea>
                </div>
                    <div class="modal-footer">
                        <input type="hidden" id="ID" name="ID" />
                        <input type="hidden" id="Img" name="Image" />
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" id="btnsumbit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="~/js/jquery-3.6.4.min.js" asp-append-version="true"></script>
<script src="~/js/jquery.dataTables.js" asp-append-version="true"></script>
